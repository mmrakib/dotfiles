set number

set ignorecase
set hlsearch
set incsearch

set tabstop=4
set shiftwidth=4
set expandtab
set autoindent

set undofile
set undodir=~/.vim/undo
set noswapfile

syntax on
set showmatch
set wildmenu
set wildmode=longest:full,full
set completeopt=menuone,noinsert,noselect
set ruler
set termguicolors

set splitright
set equalalways

set scrolloff=5
set sidescrolloff=8
set linebreak

set clipboard=unnamedplus

set hidden
set lazyredraw

set encoding=utf-8
set fileencoding=utf-8
set autoread
